# Machine dependent part of Makefiles

UNAME := $(shell uname)

ifeq ($(UNAME), Darwin)
	F_COMPILER = gfortran
	F_FLAGS    =
	F_INCLUDE  = -I/opt/local/include

	C_COMPILER = clang++ -O3
	C_FLAGS    = -w $(VERSION_FLAGS)
	C_INCLUDE  = -I/opt/local/include
	C_LIBS     = -L/opt/local/lib -L/opt/local/lib/libgcc -lgfortran.5 -lgsl -lgslcblas -lnetcdf_c++4 -lnetcdff
else ifeq ($(UNAME), Linux)
	F_COMPILER = gfortran
	F_FLAGS    =
	F_INCLUDE  =

	C_COMPILER = g++ -O3
	C_FLAGS    = -w $(VERSION_FLAGS)
	C_INCLUDE  = -L/home/fitzpatrickr/include -lgsl -lgslblas
	C_LIBS	   = -L/home/fitzpatrickr/lib -lgfortran -lgsl -lgslcblas -lblitz
endif
